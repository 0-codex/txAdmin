{
    "compilerOptions": {
        /* Truncated compiler options to list only relevant options */
        "declaration": true,
        "declarationMap": true,
        "composite": true,

        "resolveJsonModule": true,
        "esModuleInterop": true,

        "rootDir": "../",
        "baseUrl": "./",
        "paths": {
            "@locale/*": ["../locale/*"],
        },
    },
    "include": ["../locale/*.json", "./*"],
    "references": [
        { "path": "../core" }
    ]
}
